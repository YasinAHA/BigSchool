  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report",
    "metrics": "echo 'ðŸ“Š Health Check - Essential Metrics' && pnpm run metrics:tests && pnpm run metrics:build && pnpm run metrics:lint && pnpm run metrics:debt",
    "metrics:tests": "echo '\nâœ“ Test Success Rate:' && vitest --run --reporter=basic 2>&1 | grep -E 'Test Files|Tests'",
    "metrics:build": "echo '\nâœ“ Build Success:' && tsc --noEmit && echo 'âœ… Build passed'",
    "metrics:lint": "echo '\nâœ“ Lint Issues:' && eslint . --format=compact 2>&1 | grep -c 'problem' || echo '0 problems'",
    "metrics:debt": "echo '\nâœ“ Technical Debt:' && grep -r 'TODO' src/ 2>/dev/null | wc -l | xargs echo 'TODOs found:'",
    "prepare": "husky",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
